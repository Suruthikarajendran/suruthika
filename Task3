

javascript
const tasks = [];

// Function expression with arrow function to add task
const addTask = (task, callback) => {
    tasks.push(task);
    callback();
};

// Arrow function to print all tasks
const printAllTasks = () => {
    console.log("Current tasks:");
    tasks.forEach((task, index) => {
        console.log(`index + 1.{task}`);
    });
};

// Example usage
addTask("Study JavaScript", printAllTasks);
addTask("Practice coding", printAllTasks);
